// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// DONE
model Seller {
  sellerID    Int    @id @default(autoincrement())
  seller_name String
  cars        Car[]
}
// DONE
model Manufacturer {
  manufacturerID    Int    @id @default(autoincrement())
  manufacturer_name String
  cars              Car[]
}

// DONE
model Car {
  carID            Int          @id @default(autoincrement())
  model_name       String
  year             DateTime
  price            Decimal
  stock            Int
  image            String
  manufacturerIDFK Int
  sellerIDFK       Int
  orders           Order[]
  carseller        Seller       @relation(fields: [sellerIDFK], references: [sellerID])
  carmanf          Manufacturer @relation(fields: [manufacturerIDFK], references: [manufacturerID])
}
// DONE
model Customer {
  customerID Int               @id @default(autoincrement())
  first_name String
  last_name  String
  coninfo    Contact_info[]
  shaddres   Shipping_addres[]
  bankacc    Bank_account[]
  cstorder   Order[]
}

// DONE
model Contact_info {
  contact_infoID Int      @id @default(autoincrement())
  mobile_num     Int
  email          String
  customerIDFk   Int
  csid           Customer @relation(fields: [customerIDFk], references: [customerID])
}

// DONE
model Shipping_addres {
  addresID     Int      @id @default(autoincrement())
  zone         Int
  str          Int
  country      String
  house_num    Int
  city         String
  customerIDFK Int
  csid         Customer @relation(fields: [customerIDFK], references: [customerID])
}

// DONE
model Bank_account {
  accountID       Int      @id @default(autoincrement())
  account_balance Decimal
  iban            String
  customerIDFK    Int
  csid            Customer @relation(fields: [customerIDFK], references: [customerID])
}

// Done
model User {
  userID   Int    @id @default(autoincrement())
  username String
  password String
  type     String
}

// Done
model Order {
  orderID      Int      @id @default(autoincrement())
  order_num    Int
  quantity     Int
  carIDFK      Int
  customerIDFK Int
  carorder     Car      @relation(fields: [carIDFK], references: [carID])
  csorder      Customer @relation(fields: [customerIDFK], references: [customerID])
}
